<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Borrower_must_have_Email</fullName>
    <active>false</active>
    <description>Borrower must have Email</description>
    <errorConditionFormula>AND(
  ISPICKVAL(Status__c, &apos;Submitted&apos;),
  NOT(ISBLANK(Borrower__c)),
  ISBLANK(Borrower__r.Email)
)</errorConditionFormula>
    <errorDisplayField>Borrower__c</errorDisplayField>
    <errorMessage>Borrower must have Email address before submitting the Loan Application.</errorMessage>
</ValidationRule>
